@model IEnumerable<V2Capstone.Models.StudentModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScienceGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MathGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HistoryGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MathRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScienceRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HistoryRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverallRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverallGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNotified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScienceGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MathGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HistoryGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MathRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScienceRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HistoryRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverallRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverallGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNotified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.TeacherId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
