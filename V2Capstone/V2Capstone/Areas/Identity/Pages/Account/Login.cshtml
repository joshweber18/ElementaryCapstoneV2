@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .spacer {
        padding: 10px;
    }

    .textbox {
        
        text-align: center;
    }

</style>


<div class="form-horizontal form">

    <div class="row" style="padding-top:5%">
        <div class="col-xs-12">
            <center>
                <section>
                    <form method="post">
                        <h3>myStudent</h3>
                        <hr />
                        <div style="padding:20px;"></div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <div class="row">
                                <div class="col-xs-5">
                                    <div style="padding-left:60%">
                                        <h4>Email</h4>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group" style="width:50%; float:left">
                                        <input asp-for="Input.Email" class="form-control" id="Input.Email" placeholder="" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer"></div>

                        <div>
                            <div class="row">
                                <div class="col-xs-5">
                                    <div style="padding-left:60%">
                                        <h4>Password</h4>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group" style="width:50%; float:left">
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer"></div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default" style="background-color:blue; color:white; width:100px">Login</button>
                        </div>

                        <div class="spacer"></div>
                        <div class="spacer"></div>

                    </form>
                </section>
            </center>
        </div>
    </div>
</div>